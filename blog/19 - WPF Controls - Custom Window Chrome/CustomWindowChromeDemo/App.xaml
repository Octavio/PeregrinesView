<Application
    x:Class="CustomWindowChromeDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CustomWindowChromeDemo"
    StartupUri="MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--  Import standard styles from Peregrine.WPF.View library  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Peregrine.WPF.View;component/AllStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:ViewModelLocator x:Key="ViewModelLocator" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
