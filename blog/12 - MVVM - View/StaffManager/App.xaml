<Application
    x:Class="StaffManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StaffManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    StartupUri="MainView.xaml"
    mc:Ignorable="d">

    <Application.Resources>
    
        <ResourceDictionary>
            <!--  Import standard styles from Peregrine.WPF.View library  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Peregrine.WPF.View;component/AllStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:ViewModelLocator x:Key="ViewModelLocator" />
        </ResourceDictionary>

    </Application.Resources>

</Application>