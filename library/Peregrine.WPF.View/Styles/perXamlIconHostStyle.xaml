<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vctrl="clr-namespace:Peregrine.WPF.View.Controls">

    <Style TargetType="{x:Type vctrl:perXamlIconHost}">
        <!--  "almost black" give a better visual  -->
        <Setter Property="StandardForeground" Value="#202020" />
        <Setter Property="StandardHighlight" Value="DarkOrange" />
        <Setter Property="DisabledForeground" Value="#C0C0C0" />
        <Setter Property="DisabledHighlight" Value="#808080" />
    </Style>

</ResourceDictionary>