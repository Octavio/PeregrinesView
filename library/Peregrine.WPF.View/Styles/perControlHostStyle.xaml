<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vctrl="clr-namespace:Peregrine.WPF.View.Controls">

    <Style TargetType="{x:Type vctrl:perControlHost}">
        <Setter Property="CaptionLocation" Value="ToLeftOfControl" />
        <Setter Property="CaptionFontWeight" Value="Bold" />
        <Setter Property="CaptionWidth" Value="120" />
        <Setter Property="BorderBrush" Value="Silver" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderCornerRadius" Value="4" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="HiddenContentTextBrush" Value="DarkBlue" />
    </Style>

</ResourceDictionary>